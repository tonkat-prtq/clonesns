html {
  height: 100%;
}

body {
  text-align: center;
  height: 100px;
}

header {
  width: 100%;
  background-image: url("tokunoshimaIMGL4614_TP_V.jpg");
  height: 80px;
  padding: 20px 0;
  background-size: cover;
}

header h1 {
  color: skyblue;
  margin: 0;
}

header p {
  color: white;
}

.container {
  min-height: 100%;
  position: relative;
  width: 100%;
  margin: 0 auto;
}

.container a {
  text-decoration: none;
  color: slategray;
}

.container a:hover {
  opacity: 0.6;
}

.top-content table {
  margin: 0 auto 30px;
  border-color: gray;
  border-top-width: 0px;
  border-left-width: 0px;
  border-right-width: 0px;
}

.top-content th {
  padding-bottom: 10px;
}

.top-content td {
  padding: 10px 5px;
}

.clearborder {
  border-style: none;
}

.mainpost {
  width: 50%;
}

p.title {
  border-bottom: dotted 2px khaki;
}

p.post {
  font-size: 2rem;
}

footer {
  background-color: whitesmoke;
  width: 100%;
  height: 100px;
  position: absolute;
  bottom: 0;
  display: table;
}

footer p {
  font-size: 1rem;
  text-align: center;
  vertical-align: middle;
  display: table-cell;
}
